[user]
  name = Michal Lipski
  email = kiwaczki@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = always
[alias]
  st = status -sb
  ci = commit
  cim = commit -m
  co = checkout
  br = branch -v
  rm = remote -v
  bra = branch -a
  aa = add --all
  dh = diff HEAD^
  puoh = push -u origin HEAD
  rs = reset --soft HEAD^
  rh = reset --hard HEAD^
  m = merge --no-ff --no-commit
  div = divergence
  head = !git log -1
  lo = !git log -20
  loa = !git lo --all  
[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[push]
  default = upstream
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
